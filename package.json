{
  "name": "ngx-nova-ui-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:all": "npm run build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "storybook": "ng run ngx-nova-ui:storybook",
    "build-storybook": "ng run ngx-nova-ui:build-storybook",
    "test-storybook": "test-storybook --config-dir projects/ngx-nova-ui/.storybook",
    "lint": "ng lint",
    "format": "prettier --write \"**/*.{ts,js,json,html,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,scss,css,md}\"",
    "lint:fix": "ng lint --fix",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@types/chroma-js": "^3.1.1",
    "chroma-js": "^3.1.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/animations": "^20.0.2",
    "@angular/build": "^20.0.1",
    "@angular/cli": "^20.0.1",
    "@angular/compiler-cli": "^20.0.0",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/angular": "^9.1.10",
    "@storybook/test-runner": "^0.20.1",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.1.1",
    "axe-playwright": "^2.0.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.7.0",
    "jest-image-snapshot": "^6.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.2",
    "ng-packagr": "^20.0.0",
    "playwright": "^1.48.2",
    "prettier": "^3.5.3",
    "storybook": "^9.1.10",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.34.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,scss,css}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
